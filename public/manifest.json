{
  "manifest_version": 3,
  "name": "ClipChat",
  "version": "1.0.0",
  "description": "Ask GPT questions about any YouTube video.",
  "permissions": ["tabs", "storage", "sidePanel", "contextMenus"],
  "host_permissions": [
    "*://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://api.openai.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_title": "ClipChat"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
  
}
